<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.isa.proyecto.Menu">
    <HorizontalScrollView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerUniremington"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>

            <Spinner
                android:id="@+id/spinnerSedes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>

            <Spinner
                android:id="@+id/spinnerProgramas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>

            <Spinner
                android:id="@+id/spinnerAdmisiones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>

            <Spinner
                android:id="@+id/spinnerPlataformas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>

            <Spinner
                android:id="@+id/spinnerBienestarYEgresados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>

            <Spinner
                android:id="@+id/spinnerComunidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>

            <Spinner
                android:id="@+id/spinnerUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-82dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/uniremington" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="347dp"
        android:text="ToggleButton"
        android:textOff="PRESENTADO A"
        android:textOn="PRESENTADO POR"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnsalir"
        android:layout_width="94dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/exit"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="455dp"/>

</android.support.constraint.ConstraintLayout>
